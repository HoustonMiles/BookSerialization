<VBox alignment="CENTER" maxHeight="497.0" minHeight="222.0" prefHeight="497.0" prefWidth="680.0" spacing="10.0" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.ui.BookController">
   <children>
      <Label id="statusLabel" fx:id="statusLabel" text="Ready" />
      <GridPane maxHeight="175.0" maxWidth="500.0" prefHeight="175.0" prefWidth="400.0">
         <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" maxWidth="75.0" minWidth="10.0" prefWidth="50.0" />
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
         </columnConstraints>
         <rowConstraints>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
         </rowConstraints>
         <children>
            <TextField id="titleField" GridPane.columnIndex="1" />
            <TextField id="titleField" fx:id="titleField" GridPane.columnIndex="1" />
            <TextField id="authorField" fx:id="authorField" GridPane.columnIndex="1" GridPane.rowIndex="1" />
            <TextField id="yearField" fx:id="yearField" GridPane.columnIndex="1" GridPane.rowIndex="2" />
            <TextField id="isbnField" fx:id="isbnField" GridPane.columnIndex="1" GridPane.rowIndex="3" />
            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Title" />
            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Author" GridPane.rowIndex="1" />
            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Year" GridPane.rowIndex="2" />
            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="ISBN" GridPane.rowIndex="3" />
         </children>
      </GridPane>
      <HBox alignment="TOP_CENTER" prefHeight="73.0" prefWidth="670.0" spacing="10.0">
         <children>
            <Button id="addButton" fx:id="addButton" mnemonicParsing="false" onAction="#handleAddButtonAction" text="Add Book" />
         </children>
      </HBox>
   </children>
</VBox>
